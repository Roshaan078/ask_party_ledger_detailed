<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="account_common_report_view_detailed" model="ir.ui.view">
            <field name="name">party.ledger.detailed.form</field>
            <field name="model">party.ledger.detailed</field>
            <field name="arch" type="xml">
                <form string="Party Ledger Detailed Report">
                    <field name="company_id" invisible="1"/>
                    <group col="4">
                        <field name="target_move" widget="radio"/>
                        <field name="result_selection" string="Accounts"/>
                        <field name="amount_currency" groups="base.group_multi_currency"/>
                        <newline/>
                        <field name="reconciled"/>
                        <newline/>
                        <field name="date_from" required="True"/>
                        <field name="date_to" required="True"/>
                    </group>
                    <group>
                        <field name="journal_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="partner_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action Window for Wizard -->
        <record id="action_account_report_pld" model="ir.actions.act_window">
            <field name="name">Party Ledger Detailed</field>
            <field name="res_model">party.ledger.detailed</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_common_report_view_detailed"/>
            <field name="target">new</field>
        </record>
<!--        <menuitem id="menu_account_report_pld"-->
<!--                  name="Party Ledger Detailed"-->
<!--                  action="action_account_report_pld"-->
<!--                  parent="menu_finance_partner_reports"-->
<!--                  sequence="40"/>-->
    </data>
</odoo>
