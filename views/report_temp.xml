<odoo>
    <template id="report_party_ledger">
        <!-- <t t-set="datetime" t-value="__import__('datetime')"/> -->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h3>Party Ledger: <span t-esc="o.name"/></h3>
                        
                        <p>
                            <span style="margin-right:5px;">From:</span>
                            <span t-esc="datetime.datetime.strptime(data['form']['date_from'], '%Y-%m-%d').strftime('%d/%m/%Y')" style="margin-right:15px;"/>
                            <span style="margin-right:5px;">To:</span>
                            <span t-esc="datetime.datetime.strptime(data['form']['date_to'], '%Y-%m-%d').strftime('%d/%m/%Y')"/>
                        </p>

                        <table class="table table-condensed table-sm" border="1" style="width:100%; border-collapse: collapse;">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Journal</th>
                                    <th>Document</th>
                                    <th>Product</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right">Unit Price</th>
                                    <th class="text-right">Debit</th>
                                    <th class="text-right">Credit</th>
                                    <th class="text-right">Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="get_lines(data, o)" t-as="line">
                                    <tr>
                                        <td><span t-esc="line['date']"/></td>
                                        <td><span t-esc="line['journal']"/></td>
                                        <td><span t-esc="line['document']"/></td>
                                        <td><span t-esc="line['product'] or ''"/></td>
                                        <td class="text-end"><t t-esc="'{:,.2f}'.format(line['quantity'] or 0)"/></td>
                                        <td class="text-end"><t t-esc="'{:,.2f}'.format(line['price_unit'] or 0)"/></td>
                                        <td class="text-end"><t t-esc="'{:,.0f}'.format(line['debit'] or 0)"/></td>
                                        <td class="text-end"><t t-esc="'{:,.0f}'.format(line['credit'] or 0)"/></td>
                                        <td class="text-end"><t t-esc="'{:,.0f}'.format(line['running_balance'] or 0)"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
