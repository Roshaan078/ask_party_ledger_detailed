<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Paper Format for Report -->
        <record id="paperformat_party_ledger_custom" model="report.paperformat">
            <field name="name">Party Ledger Details</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">12</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
            <field name="dpi">110</field>
        </record>
        <!-- <report
            id="action_report_partnerledger_detailed"
            model="party.ledger.detailed"
